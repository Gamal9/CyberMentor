<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:i18n="clr-namespace:CyberMentor.Helper"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="{i18n:Translate AddReview}"
             x:Class="CyberMentor.View.AddReviewPage">
    <ContentPage.Content>
        <StackLayout Margin="20" HorizontalOptions="Fill">
            <Entry Placeholder="Review Title " x:Name="EntryTitle"/>
            <Editor x:Name="EntryDesc" HeightRequest="120" Margin="0,20" Placeholder="Description" />
            <Button HorizontalOptions="Center" BackgroundColor="Green" Text="{i18n:Translate Save}" TextColor="White" CornerRadius="20" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>